function setLanguage() {
  let language = document.getElementsByName("language-selector")[0].value;
  console.log("Default Language: " + language);
  changeLanguage(language);
}

function changeLanguage(language) {
  console.log("change language method: " + language);
  getLanguageFromServer(language);
}

